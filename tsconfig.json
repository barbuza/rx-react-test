{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "lib": [
      "es5",
      "es2015.promise",
      "es2015.collection",
      "es2015.iterable",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "dom"
    ],
    "jsx": "react",
    "sourceMap": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "importHelpers": true
  },
  "exclude": [
    "node_modules"
  ]
}
